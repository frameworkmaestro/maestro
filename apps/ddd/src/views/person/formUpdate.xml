<?xml version="1.0"?>
<view>
    <mdialog id="formUpdateDialog" state="open" onClose="structure.reload();">
        <property title="$this->data->title"/>
        <tools>
            <mlinkbutton id="lbSave" iconCls="icon-save" text="{{_M('Save')}}" plain="true" action="@ddd/person/actionUpdate|formUpdate"/>
        </tools>
        <mform id="formUpdate">
            <fields>
                <mhiddenfield id="person_idPerson" />
                <mtextfield id="person_name" width="250px" label="Name" />
                <mcpffield id="person_cpf" width="250px" label="CPF" />
                <mcalendarfield id="person_birthDate" width="250px" label="BirthDate" />
            </fields>
            <data load="$this->data->object"/>
        </mform>
    </mdialog>
</view>