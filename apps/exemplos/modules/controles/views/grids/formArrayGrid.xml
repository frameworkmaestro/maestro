                <mdatagridcolumn index="7" title="Calculo 2" width="15%"/>
            </mdatagrid>
        </fields>
        <buttons>
            <mbutton id="btnSubmit" text="Enviar" action="@exemplos/controls/formArrayGrid" />
        </buttons>
    </mform>
</view>