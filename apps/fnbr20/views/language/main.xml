<?xml version="1.0"?>
<view>
    <mformdialog id="main" title="{{_M('Language')}}">
        <fields>
            <mdatagrid id="gridFind" query="$this->data->query" pageLength="15" width="400px">
                <options singleSelect="true"/>
                <mtoolbar>
                    <mtextfield id="filter_language" label="{{_M('Language')}}" size="15" value="$this->data->language" placeholder="{{_M('Language')}}" />
                    <mlinkbutton id="lbSearch" action="!$('#gridFind').datagrid('filter',event)" iconCls="icon-search" title="{{_M('Search')}}" plain="true"/>
                    <mlinkbutton id="lbAdd" action="^fnbr20/language/formObject|dlgFormObject" iconCls="icon-add" text="{{_M('New')}}" plain="true"/>
                </mtoolbar>
                <mdatagridcolumn field="idLanguage" visible="false"/>
                <mdatagridcolumn type="link" field="language" action="^fnbr20/language/formObject/#idLanguage#|dlgFormObject" title="{{_M('Language')}}"/>
                <mdatagridcolumn field="description" title="{{_M('Description')}}"/>
            </mdatagrid>
        </fields>
    </mformdialog>
</view>