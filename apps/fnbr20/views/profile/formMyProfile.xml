<?xml version="1.0"?>
<view>
    <mformdialog id="formMyProfile" title="$this->data->title">
        <property labelClass="col-md-6" />
        <fields>
            <mhiddenfield id="idUser" value="$this->data->idUser" />
            <mselection id="languagePreference" label="Language" options="$this->data->languages" value="$this->data->languagePreference"/>
        </fields>
        <tools>
            <mlinkbutton id="lbSave" iconCls="icon-save" text="{{_M('Save')}}" plain="true" action="@fnbr20/profile/myprofile|formMyProfile"/>
        </tools>            
    </mformdialog>
</view>